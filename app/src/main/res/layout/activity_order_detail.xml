<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 <com.canplay.repast_pad.view.NavigationBar
     android:id="@+id/navigationBar"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:navigationTitle="订单详情"
     />
    <com.canplay.repast_pad.view.scrollView.StickyScrollView
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_weight="1"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/slow_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号：14667388844"/>
                <TextView
                    android:id="@+id/tv_pay_state"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待结账"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color"/>
            <TextView

                android:id="@+id/tv_table_code"
                android:background="@color/white"
                android:layout_weight="1"
                android:paddingLeft="13dp"
                android:paddingTop="13dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:textColor="@color/slow_black"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="桌号：30"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:textColor="@color/slow_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_marginRight="11dp"

                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥480"/>

            </LinearLayout>
            <TextView

                android:id="@+id/tv_time"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/slow_black"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="2017.12.16  10:30:35"/>
            <com.canplay.repast_pad.view.RegularListView
                android:layout_marginTop="6dp"
                android:divider="#00000000"
                android:dividerHeight="0dip"
                android:listSelector="@android:color/transparent"
                android:id="@+id/lv_info"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                style="@style/lv_content" />
            <TextView

                android:id="@+id/tv_remark"
                android:background="@color/white"
                android:layout_weight="1"
                android:paddingLeft="13dp"
                android:gravity="center_vertical"
                android:textColor="@color/slow_black"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="备注：所有菜都不需要辣椒"/>

        </LinearLayout>
    </com.canplay.repast_pad.view.scrollView.StickyScrollView>
    <TextView
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_pay_sure"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="确认付款"/>

</RelativeLayout>
