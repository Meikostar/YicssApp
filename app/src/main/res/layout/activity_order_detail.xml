<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 <com.canplay.repast_pad.view.NavigationBar
     android:id="@+id/navigationBar"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:navigationTitle="订单详情"
     app:navigationRight_type="img"
     app:navigationRight_img="@drawable/dayin_od"
     />
    <com.canplay.repast_pad.view.scrollView.StickyScrollView
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg">
        <LinearLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_go"
            android:background="@drawable/bule_bgs"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_weight="1"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号：14667388844"/>


            </LinearLayout>


            <TextView
                android:layout_below="@+id/ll_bg"
                android:id="@+id/tv_table_code"
                android:layout_weight="1"
                android:paddingLeft="13dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="桌号：30"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/tv_pay_state"
                    android:layout_marginRight="11dp"
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待结账"/>
                <ImageView
                    android:layout_marginRight="15dp"
                    android:src="@drawable/arrow_right"
                    android:layout_width="19dp"
                    android:layout_height="25dp" />

            </LinearLayout>
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/content_bg"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："/>
                <TextView
                    android:id="@+id/tv_orderno"
                    android:textSize="15sp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:textColor="@color/color6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginRight="11dp"
                    android:textSize="12.5sp"
                    android:textColor="@color/color9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color"/>


            <com.canplay.repast_pad.view.RegularListView
                android:layout_marginTop="6dp"
                android:divider="#00000000"
                android:dividerHeight="0dip"
                android:listSelector="@android:color/transparent"
                android:id="@+id/lv_info"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                style="@style/lv_content" />
            <LinearLayout
                android:id="@+id/ll_remark"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="51dp">
                <TextView
                    android:background="@color/white"
                    android:paddingLeft="13dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/slow_black"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="16sp"
                    android:text="备注："/>
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/tv_remark"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:paddingLeft="13dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color6"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="所有菜都不需要辣椒"/>

            </LinearLayout>
            <View
                android:id="@+id/lines"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/content_bg"/>
            <LinearLayout
                android:id="@+id/ll_total"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:textColor="@color/slow_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_marginRight="11dp"
                    android:textSize="20sp"
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥480"/>

            </LinearLayout>

        </LinearLayout>
    </com.canplay.repast_pad.view.scrollView.StickyScrollView>
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/content_bg"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_pay_cancel"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="确认付款"/>
        <View
            android:id="@+id/line"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_pay_sure"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="确认付款"/>
    </LinearLayout>


</RelativeLayout>
