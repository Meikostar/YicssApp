<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/content_bg"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            android:textColor="@color/slow_black"
            android:text="01.26"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_cout"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="@color/color9"
            android:text="正常\n01"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.canplay.medical.view.DashView
            android:id="@+id/line1"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="2dp"
            app:lineHeight="1dp"
            app:lineWidth="4dp"
            app:dashWidth="4dp"
            app:dashOrientation="1"
            app:lineColor="@color/linecolor"
            android:layout_height="22dp"
            />

        <com.canplay.medical.view.DashView
            android:id="@+id/line2"
            android:layout_marginTop="23dp"
            android:layout_centerHorizontal="true"
            android:layout_width="2dp"
            app:lineHeight="1dp"
            app:lineWidth="2dp"
            app:dashWidth="2dp"
            app:dashOrientation="1"
            app:lineColor="@color/linecolor"
            android:layout_height="160dp"
            />
        <ImageView
            android:id="@+id/iv_cyc"
            android:layout_marginTop="22dp"
            android:background="@drawable/hui_cycle"
            android:layout_centerHorizontal="true"
            android:layout_width="6dp"
            android:layout_height="6dp" />
    </RelativeLayout>
    <com.canplay.medical.view.RegularListView
        android:layout_marginTop="15dp"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:listSelector="@android:color/transparent"
        android:id="@+id/rl_menu"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        style="@style/lv_content"/>
</LinearLayout>