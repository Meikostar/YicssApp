<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_time_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#661a1a1a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/select_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="【必点】秘制烤鸭"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格："
                android:layout_margin="10dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_gg_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="经典基底"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
                <TextView
                    android:id="@+id/tv_gg_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="蔬菜基底"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_gg_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="仅需餐具酱料【剔除基底】"
                android:textColor="@drawable/selector_dialog_shap_text"
                android:background="@drawable/selector_dialog_shap"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="酱料："
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_jl_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="蒜香"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
                <TextView
                    android:id="@+id/tv_jl_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="酱香"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
                <TextView
                    android:id="@+id/tv_jl_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="酸菜"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="口味："
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_kw_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="不辣"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
                <TextView
                    android:id="@+id/tv_kw_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="微辣"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
                <TextView
                    android:id="@+id/tv_kw_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="中辣"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
                <TextView
                    android:id="@+id/tv_kw_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="重辣"
                    android:textColor="@drawable/selector_dialog_shap_text"
                    android:background="@drawable/selector_dialog_shap"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_gravity="center"
            android:background="@color/color_8290AF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
           >
            <TextView
                android:id="@+id/but_tsw_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="11.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="15sp" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@color/color_8290AF"/>

            <TextView
                android:id="@+id/but_tsw_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="11.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/red"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
