<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    >
<com.canplay.repast_pad.view.NavigationBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:navigationTitle="打印设置"/>
  <ImageView
      android:id="@+id/iv_star"
      android:layout_marginTop="60dp"
      android:layout_width="80dp"
      android:layout_height="65dp"
      />
    <TextView
        android:text="蓝牙功能已启用"
        android:textSize="13.5sp"
        android:layout_marginTop="35dp"
        android:textColor="@color/slow_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:text="请点击列表进行连接蓝牙打印机"
        android:textSize="11.5sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_contact"
        android:background="@drawable/blue_regle"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="连接"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="35dp" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_contact"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"/>
        <LinearLayout
            android:id="@+id/ll_reflash"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:text="扫描新设备"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/color9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"/>
        <ListView
            style="@style/lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
   </LinearLayout>
