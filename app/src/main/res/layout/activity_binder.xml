<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/fragment_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_shen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="28px"
                android:text="@string/shen"
                />
            <TextView
                android:id="@+id/tv_shen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right"
                android:textColor="@color/white"
                android:textSize="24px"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="28px"
                android:text="@string/shi"
                />
            <TextView
                android:id="@+id/tv_shi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right"
                android:textColor="@color/white"
                android:textSize="24px" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_qu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="28px"
                android:text="@string/qu"
                />
            <TextView
                android:id="@+id/tv_qu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right"
                android:textColor="@color/white"
                android:textSize="24px" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_dian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="28px"
                android:text="@string/dian"
                />
            <TextView
                android:id="@+id/tv_dian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right"
                android:textColor="@color/white"
                android:textSize="24px" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="40px"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="26px"
            android:text="下一步"
            android:background="@drawable/round_bg_org"/>
    </LinearLayout>
</LinearLayout>