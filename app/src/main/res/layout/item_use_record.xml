<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/content_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            android:textColor="@color/slow_black"
            android:text="01.26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="15dp"
            android:id="@+id/tv_state"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/slow_black"
            android:text="已完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.canplay.medical.view.DashView
            android:id="@+id/line1"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="2dp"
            app:lineHeight="1dp"
            app:lineWidth="4dp"
            app:dashWidth="4dp"
            app:dashOrientation="1"
            app:lineColor="@color/linecolor"
            android:layout_height="22dp"
            />

        <com.canplay.medical.view.DashView
            android:id="@+id/line2"
            android:layout_marginTop="23dp"
            android:layout_centerHorizontal="true"
            android:layout_width="2dp"
            app:lineHeight="1dp"
            app:lineWidth="4dp"
            app:dashWidth="4dp"
            app:dashOrientation="1"
            app:lineColor="@color/linecolor"
            android:layout_height="100dp"
            />
        <ImageView
            android:id="@+id/iv_cyc"
            android:layout_marginTop="22dp"
            android:background="@drawable/hui_cycle"
            android:layout_centerHorizontal="true"
            android:layout_width="6dp"
            android:layout_height="6dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_marginRight="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"

            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_marginLeft="8dp"


                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/slow_black"
                    android:text="测量血压"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_amout"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/color6"
                    android:text="医生设置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:lineSpacingExtra="4dp"
                android:padding="5dp"
                android:layout_marginLeft="18dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tv_data"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/slow_black"
                android:text="收缩压：170   舒张压：120\心率 ：75"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>