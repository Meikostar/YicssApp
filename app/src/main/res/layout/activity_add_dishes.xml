<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >
    <com.canplay.repast_pad.view.NavigationBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationTitle="添加菜品"
        app:navigationRight_type="txt"
        app:navigationRight_txt="保存"
        />

    <com.canplay.repast_pad.view.scrollView.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
         <LinearLayout
             android:background="@color/white"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:textColor="@color/slow_black"
                 android:text="菜品图片"
                 android:layout_marginTop="16dp"
                 android:layout_marginLeft="12dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <TextView
                 android:text="*"
                 android:textColor="@color/blue"
                 android:layout_marginTop="16dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <TextView
                 android:textColor="@color/slow_black"
                 android:text=":"
                 android:layout_marginTop="16dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <ImageView
                 android:layout_marginBottom="13dp"
                 android:layout_marginTop="16dp"
                 android:layout_marginLeft="6dp"
                 android:layout_width="120dp"
                 android:layout_height="80dp"
                 android:id="@+id/iv_img"/>
         </LinearLayout>
         
        </LinearLayout>
    </com.canplay.repast_pad.view.scrollView.StickyScrollView>
</LinearLayout>
